@model CrudOperations.Models.Entities.AddStudentViewModel

<h1>Add Student</h1>

<form method="post">
    @Html.AntiForgeryToken() <!-- Protects against CSRF attacks -->

    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" id="Name" class="form-control" name="Name" value="@Model.Name" />
        <span asp-validation-for="Name" class="text-danger"></span> <!-- Validation message -->
    </div>

    <div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <input type="email" id="Email" class="form-control" name="Email" value="@Model.Email" />
        <span asp-validation-for="Email" class="text-danger"></span> <!-- Validation message -->
    </div>

    <div class="mb-3">
        <label for="Phone" class="form-label">Phone</label>
        <input type="text" id="Phone" class="form-control" name="Phone" value="@Model.Phone" />
        <span asp-validation-for="Phone" class="text-danger"></span> <!-- Validation message -->
    </div>

    <div class="form-check mb-3">
        <input type="checkbox" class="form-check-input" id="Subscribed" name="Subscribed" @(Model.Subscribed ? "checked" : "") />
        <label class="form-check-label" for="Subscribed">Subscribed</label>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>